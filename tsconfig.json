{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "noLib": false,
    "allowJs": true,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "types": [
      "@types/node",
      "@nuxt/types"
    ]
  },
  "include": [
    "server/**/*",
    "client/**/*"
  ]
}
